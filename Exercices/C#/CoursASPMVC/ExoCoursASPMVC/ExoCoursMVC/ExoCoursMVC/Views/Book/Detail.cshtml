@model ExoCoursMVC.Models.Book
@{
    ViewData["Title"] = "Product Catalog";
}

<div class="card mb-3" style="max-width: 900px;">
    <div class="row g-0">
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title">@Model.Titre</h2>
                <h4 class="text-success mb-3">@Model.Genre</h4>
                <p>@Model.Stock en stock</p>
                <a asp-action="Index" class="btn btn-secondary">Retour au catalogue</a>
            </div>
        </div>
    </div>
</div>