@model IEnumerable<ExoCoursMVC.Models.Book>
@{
    ViewData["Title"] = "Book Catalog";
}
<h2 class="mb-4">@ViewData["Title"]</h2>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Titre</th>
            <th scope="col">Genre </th>
            <th scope="col">Stock</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Titre</td>
                <td>@book.Genre</td>
                <td>@book.Stock en stock</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@book.Id" class="btn btn-primary btn-sm">Details</a>
                    <a asp-action="Update" asp-route-id="@book.Id" class="btn btn-success btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" class="text-center">
                <a asp-action="Index" class="btn btn-secondary btn-sm">Retour</a>
            </td>
        </tr>
    </tfoot>
</table>