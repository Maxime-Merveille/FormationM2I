@model IEnumerable<CoursASPMVC.Models.Produit>
@{
    ViewData["Title"] = "Product Catalog";
}
<h2 class="mb-4">@ViewData["Title"]</h2>
<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix </th>
            <th scope="col">Stock</th>
            <th scope="col">Est dispo</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Nom</td>
                <td>@product.Prix</td>
                <td>@product.Stock en stock</td>
                <td>@product.IsAvailable </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Details</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-success btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" class="text-center">
                <a asp-action="Add" class="btn btn-primary btn-sm">+ Ajouter produit</a>
            </td>
        </tr>
    </tfoot>
</table>