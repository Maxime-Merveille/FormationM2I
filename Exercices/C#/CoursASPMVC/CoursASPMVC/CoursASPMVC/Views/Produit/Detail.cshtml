@model CoursASPMVC.Models.Produit
@{
    ViewData["Title"] = "Product Catalog";
}

<div class="card mb-3" style="max-width: 900px;">
    <div class="row g-0">
        <div class="col-md-7">
            <div class="card-body">
                <h2 class="card-title">@Model.Nom</h2>
                <h4 class="text-success mb-3">Prix: @Model.Prix.ToString("N2")</h4>
                <p>
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success fs-6">@Model.Stock en stock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">Rupture de stock</span>
                    }
                </p>
                <a asp-action="Index" class="btn btn-secondary">Retour au catalogue</a>
            </div>
        </div>
    </div>
</div>